{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "name",
        "dueDate",
        "done"
    ],
    "additionalProperties": true,
    "properties": {
        "name": {
            "id": "#/properties/name",
            "type": "string",
            "title": "The name schema",
            "description": "name of the todo task"
        },
        "dueDate": {
            "id": "#/properties/dueDate",
            "type": "string",
            "title": "The dueDate schema",
            "description": "due date for the task to be completed"
        },
        "done": {
            "id": "#/properties/done",
            "type": "boolean",
            "title": "The done schema",
            "description": "indicates whether task is completed or not"
        }
    }
}